unset basedir
unset datadir
unset tmpdir
unset port
unset srcdir

# If dirs or port were set manually, we'll reset them
opts=

path() {
  val=$1
  opt="--$2="
  val=${arg##$opt}
  if ! [[ "$val" =~ "/" ]]
  then
    val=`pwd`/$val
  fi
}

defaults="--no-defaults"
valgrind=""
result=0

for arg do
  if [[ "$arg" =~ "--defaults-file" ]]
  then
    defaults="$arg"
  elif [[ "$arg" =~ "--defaults-group-suffix" ]]
  then
    group_suffix="$arg"
  elif [[ "$arg" =~ "--datadir=" ]]
  then
    path $arg datadir
    datadir=$val
  elif [[ "$arg" =~ '--basedir=' ]]
  then
    path $arg basedir
    basedir=$val
  elif [[ "$arg" =~ '--srcdir=' ]]
  then
    path $arg srcdir
    srcdir=$val
  elif [[ "$arg" =~ '--tmpdir=' ]]
  then
    path $arg tmpdir
    tmpdir=$val
  elif [[ "$arg" =~ '--port=' ]]
  then
    port=${arg##--port=}
  elif [[ "$arg" =~ '--valgrind' ]]
  then
    valgrind=`which valgrind`
    if [ -z "$valgrind" ]
    then
      echo "--------------------------------------------"
      echo "ERROR: valgrind was requested but not found!"
      echo "--------------------------------------------"
      result=1
    fi
  else
    opts="$opts $arg"
  fi
done

basedir=${basedir-`pwd`}
srcdir=${srcdir-$basedir}
datadir=${datadir-$basedir/data}
tmpdir=${tmpdir-$datadir/tmp}
port=${port-3306}

if [ -e $basedir/sql/share/english ]
then
	langdir=$basedir/sql/share
	engdir=$basedir/sql/share/english
else
	echo "ERROR: Could not find langdir"
fi

echo "Variables from test_env: 
     defaults=$defaults 
     basedir=$basedir 
     datadir=$datadir 
     tmpdir=$tmpdir 
     port=$port
     valgrind=$valgrind
     result=$result
     opts=$opts
"

